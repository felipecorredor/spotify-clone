---
import { allPlaylists, songs, type Playlist, type Song } from '@/lib/data';
import { playlists } from '@/lib/data';
import Layout from '@/layouts/Layout.astro';
import PlayListItemCard from '@/components/PlayListItemCard.astro';

const { id } = Astro.params

const playlist = allPlaylists.find((playlist: Playlist) => playlist.id === id);
const playListSong = songs.filter((song: Song) => song.albumId === playlist?.albumId)

---

<Layout title="Spotify Clone">
  <div 
    id="playlist-container"
    class="relative flex flex-col h-full bg-zinc-900 overflow-x-hidden"
    transition:name={`playlist ${id} box`}>

    <!-- PageHeader -->

    <header class="flex flex-col gap-8 px-6">
      <picture class="aspect-square h-52 w-52 flex-none">
        <img 
          src={playlist?.cover} 
          alt={`Cover of ${playlist?.title}`} 
          class="object-cover w-full h-full rounded-md" 
          transition:name=`playlist ${playlist?.id} image`
          />
      </picture>
    </header>
    
    <div class="relative z-10 px-6 pt-10">

    </div>

    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80" />
  </div>
</Layout>
